generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_URL")
}

// Users & Groups

model User {
    id              String    @id @unique @default(cuid())
    provider_id     String    @unique
    email           String    @unique
    hashed_password String?
    session         Session[]

    username        String   @unique
    displayname     String?
    usedRegkey      Regkey   @relation(fields: [regkeyKey], references: [key])
    permissionLevel Int      @default(1) // 1: Regular user 2: Verified (email or Discord) 3: Moderator 4: Catalog Manager 5: Administrator
    bio             String?
    image           String?
    created         DateTime @default(now())
    lastOnline      DateTime @default(now())
    status          String?
    currency        Int      @default(0)
    // groupsOwned  Group[] @relation("owner")
    // groupsJoined Group[] @relation("member")
    places          Place[]
    posts           Post[]
    regkeyKey       String

    @@map("user")
}

model Session {
    id           String @id @unique
    user_id      String
    expires      BigInt
    idle_expires BigInt
    user         User   @relation(references: [id], fields: [user_id], onDelete: Cascade)

    @@index([user_id])
    @@map("session")
}

model Regkey {
    key      String    @unique @default(uuid())
    usesLeft Int       @default(1)
    expiry   DateTime?
    users    User[]
}

model Post {
    id             String   @id @unique @default(cuid())
    author         User     @relation(fields: [authorUsername], references: [username])
    authorUsername String
    posted         DateTime @default(now())
    content        String
}

