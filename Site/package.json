{
	"name": "mercurycore",
	"scripts": {
		"dev": "bun x -b vite dev",
		"build": "bun x -b vite build",
		"format": "biome format src --write",
		"lint": "biome lint src",
		"prod": "bun i -p && bun x -b vite build",
		"preview": "bun x -b vite preview",
		"buildview": "bun x -b vite build && bun x -b vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
	
		"serve": "bun x pm2 start",
		"list": "bun x pm2 list",
		"logs": "bun x pm2 logs"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.0",
		"@types/bun": "^1.3.1",
		"@types/d3-interpolate": "^3.0.4",
		"@types/nprogress": "^0.2.3",
		"@types/serviceworker": "^0.0.159",
		"@types/smtp-server": "^3.5.12",
		"svelte-check": "^4.3.3"
	},
	"type": "module",
	"dependencies": {
		"@melt-ui/pp": "^0.3.2",
		"@melt-ui/svelte": "^0.86.6",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "2.42",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@unocss/core": "^66.5.4",
		"@unocss/extractor-svelte": "^66.5.4",
		"@unocss/preset-tagify": "^66.5.4",
