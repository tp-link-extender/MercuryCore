		"nprogress": "^0.2.0",
		"picocolors": "^1.1.1",
		"sharp": "^0.34.4",
		"smtp-server": "^3.15.0",
		"surrealdb": "^1.3.2",
		"svelte": "^5.41.3",
		"sveltekit-superforms": "^2.28.0",
		"typescript": "^5.9.3",
		"unocss": "^66.5.4",
