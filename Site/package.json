{
	"name": "mercurycore",
	"scripts": {
		"dev": "bun x -b vite dev",
		"build": "bun x -b vite build",
		"format": "biome format src --write",
		"lint": "biome lint src",
		"prod": "bun i -p && bun x -b vite build",
		"preview": "bun x -b vite preview",
		"buildview": "bun x -b vite build && bun x -b vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"serve": "bun x pm2 start",
		"list": "bun x pm2 list",
		"logs": "bun x pm2 logs"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/bun": "^1.3.4",
		"@types/d3-interpolate": "^3.0.4",
		"@types/nprogress": "^0.2.3",
		"svelte-check": "^4.3.4",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@unocss/extractor-svelte": "^66.5.10",
		"@unocss/preset-tagify": "^66.5.10",
		"@unocss/transformer-directives": "^66.5.10",
		"@unocss/transformer-variant-group": "^66.5.10",
		"arktype": "^2.1.29",
		"d3-interpolate": "^3.0.1",
		"melt": "^0.42.0",
		"nodemailer": "^7.0.11",
		"nprogress": "^0.2.0",
		"picocolors": "^1.1.1",
		"sharp": "^0.34.5",
		"surrealdb": "^1.3.2",
		"svelte": "^5.46.0",
		"sveltekit-superforms": "^2.29.1",
		"typescript": "^5.9.3",
		"unocss": "^66.5.10",
		"vite": "npm:rolldown-vite@latest"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"@sveltejs/kit",
		"esbuild",
		"sharp"
	]
}
