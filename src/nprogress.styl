// Modified nprogress.css file

#nprogress
	// Make clicks pass-through
	pointer-events none
	.bar
		background var(--mainaccent)

		position fixed
		z-index 1031
		top 0
		left 0

		width 100%
		height 2px

	// Fancy blur effect
	.peg
		display block
		position absolute
		right 0px
		width 100px
		height 100%
		box-shadow 0 0 10px var(--mainaccent), 0 0 5px var(--mainaccent)
		opacity 1.0

		-webkit-transform rotate(3deg) translate(0px, -4px)
		-ms-transform rotate(3deg) translate(0px, -4px)
		transform rotate(3deg) translate(0px, -4px)
