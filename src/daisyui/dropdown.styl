.dropdown-content
	z-index 1000
	padding-left 0.5rem

	ul
		list-style none
		width 10rem
		padding-left 0
		background var(--darker)

	a
	button
		width 100%
		padding-left 0
		padding-right 3rem
		border none
		&:hover
		&:focus
			color var(--grey-text) !important
			background var(--accent)

	li
		padding 0px
		transition background 0.2s
