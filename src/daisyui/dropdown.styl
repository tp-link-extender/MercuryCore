.dropdown2
	&.dropdown-open .dropdown-content
	&:not(.dropdown-hover):focus .dropdown-content
	&:focus-within .dropdown-content
	&.dropdown-hover:hover .dropdown-content
		visibility visible
		opacity 1

	&:is(details) summary::-webkit-details-marker
		display none

