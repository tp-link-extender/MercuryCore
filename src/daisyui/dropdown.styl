.dropdown2
	position relative
	display inline-block

.dropdown2 > *:focus
	outline 2px solid transparent
	outline-offset 2px

.dropdown2 .dropdown-content
	position absolute

.dropdown2:is(:not(details)) .dropdown-content
	visibility hidden
	opacity 0

.dropdown-end .dropdown-content
	right 0px

