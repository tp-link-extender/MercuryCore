// Zephyr 5.3.0
// Bootswatch

// Variables
secondary = #6c757d

@font-face
	font-family "SF UI Display Regular"
	font-style normal
	font-weight 400
	font-display swap
	src url(/SFregular.woff2) format("woff2"),
		url(/SFregular.woff) format("woff"),
		url(/SFregular.ttf) format("ttf")

	unicode-range U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC,
		U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC,
		U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD

@font-face
	font-family "SF UI Display Regular"
	font-style normal
	font-weight 700
	font-display swap
	src url(/SFbold.woff2) format("woff2"),
		url(/SFbold.woff) format("woff"),
		url(/SFbold.ttf) format("ttf")

	unicode-range U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC,
		U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC,
		U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD

// Buttons

.btn-secondary
	color #212529
	border-color shade-color(secondary, 10%)

	&:disabled
	&.disabled
		border 1px solid shade-color(secondary, 10%)

	&:hover
	&:active
		background-color shade-color(secondary, 10%)
		border-color shade-color(secondary, 10%)

// Tables

thead th
	font-size 0.875rem
	text-transform uppercase

// Containers

.card
	box-shadow 0 1rem 3rem rgba(black, 0.175)

	h1
	h2
	h3
	h4
	h5
	h6
	.h1
	.h2
	.h3
	.h4
	.h5
	.h6
		color inherit

.table > :not(caption) > * > *
	background-color #0000
